<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @student.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @student.last_name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @student.age %>
</p>

<p>
  <strong>Highest Education Level:</strong>
  <%= @student.education_level %>
</p>

<p>
  <strong>Current Class List:</strong>
  <% @student.cohorts.each do |x| %>
  <%= x.name %>
  <% end %>
</p>

<h1>JOIN A class</h1>
<%= form_for @student do |f| %>
<%= f.collection_select(:cohort_ids, Cohort.all, :id, :name) %>
<%= submit_tag("ADD COURSE") %>
<% end %>

<%= link_to 'Edit', edit_student_path(@student) %> |
